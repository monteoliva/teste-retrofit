<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/itemCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/transparent">
        <RelativeLayout
            android:id="@+id/statementContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dimen_10dp"
            android:paddingStart="@dimen/dimen_40dp"
            android:paddingEnd="@dimen/dimen_10dp"
            android:paddingBottom="@dimen/dimen_10dp"
            android:background="@android:color/transparent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@android:color/transparent">
                <TextView
                    android:id="@+id/statementTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="TransferÃªncia enviada"
                    android:padding="@dimen/dimen_5dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimen_18sp" />
                <TextView
                    android:id="@+id/statementName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_5dp"
                    tools:text="David Bound"
                    android:padding="@dimen/dimen_5dp"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/dimen_18sp" />
                <TextView
                    android:id="@+id/statementBalance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_5dp"
                    tools:text="-R$ 100,00"
                    android:padding="@dimen/dimen_5dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="@dimen/dimen_18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/dimen_70dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:background="@android:color/transparent">
                <TextView
                    android:id="@+id/statementPix"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_pix"
                    android:gravity="center"
                    android:padding="@dimen/dimen_5dp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen_18sp"
                    android:visibility="gone"
                    android:background="@color/cyan" />
                <TextView
                    android:id="@+id/statementDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_5dp"
                    android:gravity="center"
                    tools:text="13/10"
                    android:padding="@dimen/dimen_5dp"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/dimen_18sp" />
            </LinearLayout>
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_20dp"
            android:background="@color/white" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent">
        <View
            android:layout_width="@dimen/dimen_1dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dimen_20dp"
            android:background="@color/gray" />

        <ImageView
            android:layout_width="@dimen/dimen_20dp"
            android:layout_height="@dimen/dimen_20dp"
            android:layout_marginTop="@dimen/dimen_56dp"
            android:layout_marginStart="@dimen/dimen_11dp"
            tools:ignore="ContentDescription"
            android:src="@drawable/ic_ball" />
    </FrameLayout>

</FrameLayout>